- img = name.strip.gsub(/\s+/, "-").downcase
- id = name.camelize.gsub(/\s+/, "")

div class="bio"
  ul class="thumbnails"
    li class="span6"
      a data-toggle="modal" href="##{id}" class="thumbnail"
        == image_tag "faculty/#{img}.jpg", class: "img-rounded"
        button class="btn" Bio
        h4 = name
        h5 = position
  == partial "partials/seminars/biography", locals: {name: name, id: id}
